<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topBlock"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#9CBEE2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="모든 책"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="205dp"
            android:src="@drawable/mainimg" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBlock"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/book1"
                android:layout_width="120dp"
                android:layout_height="190dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/book1img" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:textColor="#454647"
                android:text="어린왕자"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/book2"
                android:layout_width="120dp"
                android:layout_height="190dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/book2img" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal"
                android:textColor="#454647"
                android:text="키다리아저씨"
                android:textSize="15dp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>